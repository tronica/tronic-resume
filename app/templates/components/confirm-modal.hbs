{{#if show}}
  <div class="z-50 pt-32 fixed inset-0 w-full h-screen flex justify-around justify-center" style="background-color: rgba(0,0,0,0.5)">
    <div class="h-2 max-w-2xl bg-white shadow-lg rounded-lg">
      <div class="p-8 border border-gray-400 bg-white rounded-b p-4 flex flex-col justify-between leading-normal">
        <div class="mb-8">
          <div class="text-gray-900 font-bold text-xl mb-2">
            {{#if title}}
              {{ title }}
            {{else}}
              {{t 'modal.default_head'}}
            {{/if}}
          </div>
          <p class="text-gray-700 text-base">{{ body }}</p>
        </div>
        <div class="flex items-center">
          <button {{action onConfirm}} class="bg-transparent hover:bg-red-300 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mr-3">
            {{t 'modal.confirm'}}
          </button>
          <button {{action onCancel}} class="bg-transparent hover:bg-blue-300 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
            {{t 'modal.cancel'}}
          </button>
        </div>
      </div>
    </div>
  </div>
{{/if}}